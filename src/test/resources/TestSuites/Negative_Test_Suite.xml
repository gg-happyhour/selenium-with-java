<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Negative_Test_Suite" parallel="tests" thread-count="3" verbose="1">
	<test name="Dynamic_Logout_Timeout">
		<groups>
			<run> 
				<include name="exception-timeout" />
			</run> 
		</groups>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.NegativeLoginTests">
				<methods>
					<include name="dynamic_Loading_Timeout" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Stale_Element_Exception">
		<groups>
			<run>
				<include name="exception-stale-element-test" />
			</run>
		</groups>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.NegativeLoginTests">
				<methods>
					<include name="stale_Element_Test_Exception" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Disabled_Element_Exception">
		<groups>
			<run>
				<include name="exception-disabled-test" />
			</run>
		</groups>
		<classes>
			<class
				name="com.herokuapp.theinternet.loginpagetests.NegativeLoginTests">
				<methods>
					<include name="disabled_Element_Exception" />
				</methods>
			</class>
		</classes>
	</test>
</suite>
